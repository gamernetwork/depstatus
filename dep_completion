_dep() 
{
    local cur prev opts
    COMPREPLY=()
    cur="${COMP_WORDS[COMP_CWORD]}"
    prev="${COMP_WORDS[COMP_CWORD-1]}"
    if [ -d "./lib/" ]; then
		opts=$(ls ./lib/)
    fi
    opts="$opts pull status"

    COMPREPLY=( $(compgen -W "${opts}" -- ${cur}) )
    return 0
}
complete -F _dep /usr/bin/dep
